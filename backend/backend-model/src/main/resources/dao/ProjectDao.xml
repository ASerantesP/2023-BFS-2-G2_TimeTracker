<?xml version="1.0" encoding="UTF-8"?>
<JdbcEntitySetup
        xmlns="http://www.ontimize.com/schema/jdbc"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.ontimize.com/schema/jdbc http://www.ontimize.com/schema/jdbc/ontimize-jdbc-dao.xsd"
        catalog="" schema="${mainschema}" table="PROJECTS"
        datasource="mainDataSource" sqlhandler="dbSQLStatementHandler">
    <DeleteKeys>
        <Column>P_ID</Column>
    </DeleteKeys>
    <UpdateKeys>
        <Column>P_ID</Column>
    </UpdateKeys>
    <Queries>
        <Query id="projectTotalTime">
            <AmbiguousColumns>
                <AmbiguousColumn name="P_ID" prefix="p" />
            </AmbiguousColumns>
            <Sentence>
                <![CDATA[
                    WITH tabla AS(
                        SELECT p_id, sum(tm.tm_end_time - tm.tm_start_time) as project_total_time
                        FROM tasks t
                        LEFT JOIN timers tm on tm.t_id = t.t_id
                        GROUP BY p_id
                    )
                    SELECT #COLUMNS#
                    FROM projects p
                    LEFT JOIN tabla t on p.p_id = t.p_id
                    #WHERE#
                    #ORDER#
                ]]>
            </Sentence>
        </Query>
    </Queries>
</JdbcEntitySetup>