<?xml version="1.0" encoding="UTF-8"?>
<JdbcEntitySetup
        xmlns="http://www.ontimize.com/schema/jdbc"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.ontimize.com/schema/jdbc http://www.ontimize.com/schema/jdbc/ontimize-jdbc-dao.xsd"
        catalog="" schema="${mainschema}" table="PROJECTS"
        datasource="mainDataSource" sqlhandler="dbSQLStatementHandler">
    <DeleteKeys>
        <Column>P_ID</Column>
    </DeleteKeys>
    <UpdateKeys>
        <Column>P_ID</Column>
    </UpdateKeys>
    <Queries>
        <Query id="projectTotalTime">
            <Sentence>
                <![CDATA[
                    with tabla as(
                    select p.*, t.t_id, t_name from tasks t
                    inner join projects p on p.p_id = t.p_id
                    )
                    select p_id, p_name, p_description, p_date, sum(tm.tm_end_time - tm.tm_start_time) as project_total_time from tabla tb
                    left join timers tm on tb.t_id = tm.t_id
                    #WHERE#
                    group by p_id, p_name, p_description, p_date
                    order by p_id
                ]]>
            </Sentence>
        </Query>
    </Queries>
</JdbcEntitySetup>