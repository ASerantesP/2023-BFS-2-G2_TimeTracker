<?xml version="1.0" encoding="UTF-8"?>
<JdbcEntitySetup
        xmlns="http://www.ontimize.com/schema/jdbc"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.ontimize.com/schema/jdbc http://www.ontimize.com/schema/jdbc/ontimize-jdbc-dao.xsd"
        catalog="" schema="${mainschema}" table="PROJECTS"
        datasource="mainDataSource" sqlhandler="dbSQLStatementHandler">
    <DeleteKeys>
        <Column>P_ID</Column>
    </DeleteKeys>
    <UpdateKeys>
        <Column>P_ID</Column>
    </UpdateKeys>
    <GeneratedKey>p_id</GeneratedKey>
    <Queries>
        <Query id="projectTotalTime">
            <AmbiguousColumns>
                <AmbiguousColumn name="P_ID" prefix="pt" />
            </AmbiguousColumns>
            <Sentence>
                <![CDATA[
                    WITH task_timer AS(
                            SELECT p_id, sum(tm.tm_end_time - tm.tm_start_time) AS project_total_time, sum(tm.tm_end_time - tm.tm_start_time) AS project_total_time_decimal
                            FROM
                                tasks t
                            LEFT JOIN timers tm ON tm.t_id = t.t_id
                            group by p_id
                    ), project_table AS(
                            SELECT p_id , p_name , (p_name) AS p_name_title, p_description , p_date , p_finished
                            FROM projects p
                    )
                    SELECT
                          #COLUMNS#
                    FROM
                         users_projects up
                    INNER JOIN project_table pt ON up.p_id = pt.p_id
                    LEFT JOIN task_timer tt ON pt.p_id = tt.p_id
                    #WHERE#
                    #ORDER#
                ]]>
            </Sentence>
        </Query>
    </Queries>
</JdbcEntitySetup>