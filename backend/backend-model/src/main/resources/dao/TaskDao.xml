<?xml version="1.0" encoding="UTF-8"?>
<JdbcEntitySetup
        xmlns="http://www.ontimize.com/schema/jdbc"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.ontimize.com/schema/jdbc http://www.ontimize.com/schema/jdbc/ontimize-jdbc-dao.xsd"
        catalog="" schema="${mainschema}" table="TASKS"
        datasource="mainDataSource" sqlhandler="dbSQLStatementHandler">
    <DeleteKeys>
        <Column>T_ID</Column>
    </DeleteKeys>
    <UpdateKeys>
        <Column>T_ID</Column>
    </UpdateKeys>
    <Queries>
        <Query id="taskTimer">
            <AmbiguousColumns>
                <AmbiguousColumn name="T_ID" prefix="t" />
            </AmbiguousColumns>
            <Sentence>
                <![CDATA[
                    SELECT
                        #COLUMNS#
                    FROM
                        ${mainschema}.TASKS t
                        JOIN ${mainschema}.TIMERS tim ON t.T_ID = tim.T_ID
                    #WHERE#
                ]]>
            </Sentence>
        </Query>

        <Query id="full">
            <AmbiguousColumns>
                <AmbiguousColumn name="P_ID"
                                 prefix="P" />
                <AmbiguousColumn name="TS_ID" prefix="ts" />
            </AmbiguousColumns>
            <ValidColumns>
                <Column>T_ID</Column>
                <Column>T_NAME</Column>
                <Column>T_DESCRIPTION</Column>
                <Column>T_DATE</Column>
                <Column>T_TIME</Column>
                <Column>P_ID</Column>
                <Column>P_NAME</Column>
                <Column>P_DESCRIPTION</Column>
                <Column>P_DATE</Column>
                <Column>P_TIME</Column>
                <Column>TS_ID</Column>
                <Column>TS_NAME</Column>
                <Column>USER_</Column>
            </ValidColumns>
            <Sentence>
                <![CDATA[
                    SELECT
                        #COLUMNS#
                    FROM
                        ${mainschema}.TASKS t
                        JOIN ${mainschema}.PROJECTS p ON t.P_ID = p.P_ID
                        JOIN ${mainschema}.TASK_STATES ts ON t.TS_ID = ts.TS_ID
                    #WHERE#
                ]]>
            </Sentence>
        </Query>
    </Queries>
</JdbcEntitySetup>