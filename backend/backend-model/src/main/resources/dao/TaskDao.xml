<?xml version="1.0" encoding="UTF-8"?>
<JdbcEntitySetup
        xmlns="http://www.ontimize.com/schema/jdbc"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.ontimize.com/schema/jdbc http://www.ontimize.com/schema/jdbc/ontimize-jdbc-dao.xsd"
        catalog="" schema="${mainschema}" table="TASKS"
        datasource="mainDataSource" sqlhandler="dbSQLStatementHandler">
    <DeleteKeys>
        <Column>T_ID</Column>
    </DeleteKeys>
    <UpdateKeys>
        <Column>T_ID</Column>
    </UpdateKeys>
    <Queries>
        <Query id="projectTask">
            <AmbiguousColumns>
                <AmbiguousColumn name="P_ID" prefix="p" />
            </AmbiguousColumns>
            <Sentence>
                <![CDATA[
                    WITH tabla AS(
                        SELECT t.*,p.*,up.user_,sum(tm.tm_end_time - tm.tm_start_time) as task_total_time
                        FROM tasks t
                        INNER JOIN projects p ON t.P_ID = p.P_ID
                        INNER JOIN users_projects up on up.p_id = t.p_id
		                LEFT JOIN timers tm on tm.t_id = t.t_id
		                WHERE t.finished = false
			            GROUP BY t.t_id, p_name, p.p_id, up.user_
                    )
                    SELECT #COLUMNS#
                    FROM tabla
                    #WHERE#
                    ORDER BY t_date desc
                ]]>
            </Sentence>
        </Query>
    </Queries>
</JdbcEntitySetup>
